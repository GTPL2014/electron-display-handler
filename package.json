{
  "name": "presentation-viewer",
  "productName": "Cleveratti Presentation Viewer",
  "version": "1.0.0",
  "description": "Professional PowerPoint Presentation Viewer with Projector Sync",
  "main": "index.js",
  "author": "Ankit Yadav <ankityadav.codes@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.cleveratti.presentationviewer",
    "productName": "Presentation Viewer Pro",
    "copyright": "Copyright Â© 2026 Ankit Yadav",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules",
      "!.git"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "Cleveratti Skills"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Presentation Viewer Pro"
    },
    "protocols": [
      {
        "name": "Presentation Viewer Protocol",
        "schemes": [
          "presentationviewer"
        ],
        "role": "Viewer"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
